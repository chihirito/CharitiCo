<!-- app/views/learning_progresses/spanish_learning.html.erb -->
<h1>Learn Spanish</h1>
<div id="coins-display">Coins: <%= current_user.coins %></div>
<div class="question">
  <% if @word_data.present? && @word_data['word'].present? %>
    <p>Choose the correct Spanish translation for the word: <span class="word">"<%= @word_data['word'] %>"?</span></p>
    <div class="options">
      <% if @options.present? %>
        <% @options.each do |option| %>
          <button class="option-button" data-option="<%= option %>"><%= option %></button>
        <% end %>
      <% else %>
        <p>No options available. Please try again.</p>
      <% end %>
    </div>
    <input type="hidden" id="correct-option" value="<%= @correct_option %>">
  <% else %>
    <p>Failed to load the question. Please try again.</p>
  <% end %>
</div>
<div id="result-popup" class="hidden">
  <p id="result-message"></p>
  <button id="close-popup">Close</button>
  <button id="next-question" class="hidden">Next Question</button>
</div>
<script type="module" src="<%= asset_path 'learning_progresses.js' %>"></script>
